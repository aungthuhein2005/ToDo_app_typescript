{
  "compilerOptions": {
    "target": "ESNext",               // Use ESNext for modern JavaScript features
    "module": "ESNext",               // Use ES modules
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "node",       // Default to node module resolution
    "esModuleInterop": true,          // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true,             // Skip checking libraries to avoid unnecessary errors
    "resolveJsonModule": true         // Allow importing JSON modules if needed
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
